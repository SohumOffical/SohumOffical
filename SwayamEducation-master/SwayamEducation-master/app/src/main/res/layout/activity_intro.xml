<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="handlers"
            type="com.sngs.swayam.edu.ui.intro.handler.IntroHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.intro.view.IntroActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/constrainIntro"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.intro.view.IntroActivity"
                android:orientation="vertical"
                android:background="@color/bg_color"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/intro_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/dots_rel"
                        android:layout_marginBottom="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:id="@+id/dots_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_alignParentBottom="true">

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:dotsColor="@color/colorAccent"
                            app:dotsCornerRadius="@dimen/_10sdp"
                            app:dotsSize="@dimen/_10sdp"
                            app:dotsSpacing="@dimen/_5sdp"
                            app:dotsWidthFactor="2.0"
                            app:selectedDotColor="@color/colorAccent"
                            app:progressMode="true" />

                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <Button
                        android:id="@+id/btn_create_new_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/btn_shape_border"
                        android:textColor="@color/txt_gray"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/text_14"
                        android:visibility="gone"
                        android:text="@string/lbl_create_new_account"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"/>

                    <Button
                        android:id="@+id/btn_log_in"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/btn_shape"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:onClick="@{(v) -> handlers.onLoginIntroClick(v)}"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/text_14"
                        android:text="@string/lbl_log_in"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>