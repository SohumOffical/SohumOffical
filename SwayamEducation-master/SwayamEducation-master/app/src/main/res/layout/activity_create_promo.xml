<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="dashboard"
            type="com.sngs.swayam.edu.data.model.Dashboard"/>
        <variable name="promo"
            type="com.sngs.swayam.edu.data.model.Promo"/>
        <variable name="viewmodel"
            type="com.sngs.swayam.edu.ui.promo.viewmodel.PromoViewModel"/>
        <variable
            name="handler"
            type="com.sngs.swayam.edu.ui.promo.handler.PromoHandler" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.promo.view.CreatePromoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_rel"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@drawable/ic_back_arrow"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/promo_descp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:inputType="text"
            android:hint="Enter Description"
            android:textSize="22dp"
            android:singleLine="true"
            android:text="@={promo.description}"
            android:textColor="#114795" />

        <EditText
            android:id="@+id/promo_ownername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:inputType="text"
            android:hint="Enter Owner Name"
            android:textSize="22dp"
            android:singleLine="true"
            android:text="@={promo.owner}"
            android:layout_marginTop="10dp"
            android:textColor="#114795" />

        <EditText
            android:id="@+id/promo_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:inputType="text"
            android:hint="Enter Price"
            android:textSize="22dp"
            android:singleLine="true"
            android:text="@={`` +promo.price}"
            android:layout_marginTop="10dp"
            android:textColor="#114795" />
        <EditText
            android:id="@+id/promo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:inputType="text"
            android:hint="Enter Title"
            android:textSize="22dp"
            android:singleLine="true"
            android:text="@={promo.title}"
            android:layout_marginTop="10dp"
            android:textColor="#114795" />


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:onClick="@{(v) -> handler.onCreateClick(v, viewmodel, promo)}"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>